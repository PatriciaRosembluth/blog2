<h1>Pagina Administradora</h1>
<b>Todos los posts</b>
<br>
<%= notice %>

<%= link_to_function "Buscar", "$('#hide').toggle()" %><br>
<div id="hide" style="display:none">
<br>
<form method="GET" action="/posts/search">
Palabra: <input type="text" name="text" id="text"> &nbsp;&nbsp;&nbsp;
<input type="submit" value="Buscar">
</form>
</div>
<table class="table table-striped">
	<tr>
		<th>Titulo</th>
		<th>Texto</th>
		<th></th>
	</tr>
<% @posts.each do |post| %>
<tr>
	<td>
		<%= post.title %>
	</td>
	<td>
		<%= post.text %>
	</td>
	<td>
		<a href="/posts/<%= post.id %>">Ver</a>
		<a href="/posts/edit/<%= post.id %>">Editar</a>
		<a href="/posts/destroy/<%= post.id %>">Borrar</a>
	</td>
</tr>
<%end%>
</table>
<br>
<p>
  <a href="/posts/new" class="btn btn-default btn-lg disabled" role="button">Nuevo</a>
</p>


